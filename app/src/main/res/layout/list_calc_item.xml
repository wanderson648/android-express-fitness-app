<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:backgroundTint="#D5DAD9"
    app:cardCornerRadius="4dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_list_calc_id"
                android:background="#3C5CAF5C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/list_data_calc_response"
                android:padding="16dp"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_list_calc"
                android:background="#C4BADDBA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/list_calc_response"
                android:textSize="20sp"/>
        </LinearLayout>

</com.google.android.material.card.MaterialCardView>